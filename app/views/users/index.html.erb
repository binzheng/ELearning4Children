<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:loginNm) %></th>
      <th><%= model_class.human_attribute_name(:kataNm) %></th>
      <th><%= model_class.human_attribute_name(:kanjiNm) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:voiceGood) %></th>
      <th><%= model_class.human_attribute_name(:voiceBad) %></th>
      <th><%= model_class.human_attribute_name(:voicePerfect) %></th>
      <th><%= model_class.human_attribute_name(:created_id) %></th>
      <th><%= model_class.human_attribute_name(:updated_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.loginNm %></td>
        <td><%= user.kataNm %></td>
        <td><%= user.kanjiNm %></td>
        <td><%= user.age %></td>
        <td><%= user.email %></td>
        <td><%= user.voiceGood %></td>
        <td><%= user.voiceBad %></td>
        <td><%= user.voicePerfect %></td>
        <td><%= user.created_id %></td>
        <td><%= user.updated_id %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
