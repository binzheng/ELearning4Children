<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:loginNm) %>:</strong></dt>
  <dd><%= @user.loginNm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kataNm) %>:</strong></dt>
  <dd><%= @user.kataNm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kanjiNm) %>:</strong></dt>
  <dd><%= @user.kanjiNm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @user.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:voiceGood) %>:</strong></dt>
  <dd><%= @user.voiceGood %></dd>
  <dt><strong><%= model_class.human_attribute_name(:voiceBad) %>:</strong></dt>
  <dd><%= @user.voiceBad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:voicePerfect) %>:</strong></dt>
  <dd><%= @user.voicePerfect %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_id) %>:</strong></dt>
  <dd><%= @user.created_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_id) %>:</strong></dt>
  <dd><%= @user.updated_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
